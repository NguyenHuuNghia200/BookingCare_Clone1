<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud hoidanit</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div className="container">
        <div className="row">
            
            <form action="/post-crud" method="POST" className="col-md-8">
                <div className=" col-12 p-0 ">
                    <h1>create a user</h1>
                </div>
                <div className="form-row">
                    <div className="form-group col-md-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" className="form-control" name="email" placeholder="Email">
                    </div>
                    <div className="form-group col-md-6">
                        <label for="inputPassword4">Password</label>
                        <input type="password" className="form-control" name="password" placeholder="Password">
                    </div>
                </div>
                <div className="form-row">
                    <div className="form-group col-md-6">
                        <label for="inputEmail4">First Name</label>
                        <input type="text" className="form-control" name="firstname" >
                    </div>
                    <div className="form-group col-md-6">
                        <label for="inputPassword4">Last Name</label>
                        <input type="text" className="form-control" name="lastname" placeholder="Password">
                    </div>
                </div>
                <div className="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" className="form-control" name="address" placeholder="1234 Main St">
                </div>
                
                <div className="form-row">
                    <div className="form-group col-md-6">
                        <label for="inputCity">Phone Number</label>
                        <input type="text" className="form-control" name="phonenumber">
                    </div>
                    <div className="form-group col-md-3">
                        <label for="inputState">gender</label>
                        <select name="gender" className="form-control" style="height:34px">
                            <option selected value="1">male</option>
                            <option value="0">female</option>
                        </select>
                        
                    </div>
                    <div className="form-group col-md-3">
                        <label for="inputState">role</label>
                        <select name="roleId" className="form-control" style="height:34px">
                            <option selected value="1">admin</option>
                            <option value="0">doctor</option>
                            <option value="0">patient</option>
                        </select>
                    </div>
                    
                </div>
                
                <button type="submit" className="btn btn-primary">Sign in</button>
            </form>

        </div>
    </div>
  
    
  
</body>

</html>